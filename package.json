{
  "name": "computesdk",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter '@computesdk/cmd' run build && pnpm --filter computesdk run build && pnpm --filter '@computesdk/provider' run build && pnpm --filter '@computesdk/test-utils' run build && pnpm --filter './packages/*' --filter '!computesdk' --filter '!@computesdk/provider' --filter '!@computesdk/cmd' --filter '!@computesdk/test-utils' --filter '!@computesdk/avm' --filter '!@computesdk/aws-ecs' --filter '!@computesdk/aws-lambda' --filter '!@computesdk/lambda' --filter '!@computesdk/docker' run build",
    "clean": "pnpm -r run clean",
    "dev": "pnpm -r --parallel run dev",
    "lint": "pnpm -r run lint",
    "test": "pnpm --filter '@computesdk/cmd' --filter '@computesdk/provider' --filter 'computesdk' --filter '@computesdk/events' run test",
    "test:watch": "pnpm -r --parallel run test:watch",
    "test:coverage": "pnpm -r run test:coverage",
    "typecheck": "pnpm --filter '@computesdk/cmd' --filter '@computesdk/provider' --filter 'computesdk' --filter '@computesdk/events' --filter '@computesdk/workbench' run typecheck",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "pnpm run build && changeset publish",
    "prepare": "husky",
    "workbench": "node packages/workbench/dist/bin/workbench.js",
    "workbench:ts": "pnpm --filter @computesdk/workbench run dev:ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.2.5",
    "storybook": "^10.1.8",
    "@storybook/react-vite": "^10.1.8",
    "eslint-plugin-storybook": "^10.1.8",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-vitest": "^10.1.8",
    "@storybook/addon-a11y": "^10.1.8",
    "@storybook/addon-docs": "^10.1.8",
    "vitest": "^4.0.15",
    "playwright": "^1.57.0",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
